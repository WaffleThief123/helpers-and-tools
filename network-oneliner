iface_array=($(ip link | awk -F: '$0 !~ "lo|vir|wl|^[^0-9]"{print $2;getline}' | sed -e 's/bond[0..3]//g' | sed -r '/^\s*$/d'))  && declare -p iface_array > /dev/null&& for i in ${iface_array[@]}; do echo "" ; echo "Inteface: ${i}" ; ethtool -S $i | egrep -i "tx_error|rx_error|discards|crc|dma_readq|dma_writeq"; done; bond_array=($(ip link | awk -F: '$0 !~ "lo|vir|wl|^[^0-9]"{print $2;getline}' | sed -e 's/eth.*//g' | sed -r '/^\s*$/d'))  && declare -p bond_array > /dev/null&& for i in ${bond_array[@]}; do echo""; echo "Bonded Interface ${i} Stats:"; ethtool $i | egrep -i "bond|Speed|Duplex|Detected" ; done ; echo ; echo "LACP bond Information:"  ; lldpcli show neighbors | egrep -i "Interface|SysName|PortID"
